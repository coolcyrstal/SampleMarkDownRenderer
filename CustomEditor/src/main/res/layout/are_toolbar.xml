<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorPickerView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.chinalwb.are.colorpicker.ColorPickerView
        android:id="@+id/rteColorPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:visibility="gone"
        colorPickerView:colorViewCheckedType="checkMark"
        colorPickerView:colorViewHeight="30dp"
        colorPickerView:colorViewMarginLeft="2dp"
        colorPickerView:colorViewMarginRight="2dp"
        colorPickerView:colorViewWidth="30dp"
        colorPickerView:colors="@array/colorPickerColors" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/theme_secondary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rteEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/emoji" />

            <ImageView
                android:id="@+id/rteFontsize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="visible"
                colorPickerView:srcCompat="@drawable/fontsize" />

            <ImageView
                android:id="@+id/rteFontface"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/fontface" />

            <ImageView
                android:id="@+id/rteBold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/bold" />

            <ImageView
                android:id="@+id/rteItalic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/italic" />

            <ImageView
                android:id="@+id/rteUnderline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/underline" />

            <ImageView
                android:id="@+id/rteStrikethrough"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/strikethrough" />

            <ImageView
                android:id="@+id/rteHr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/hr" />


            <ImageView
                android:id="@+id/rteSubscript"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/subscript" />

            <ImageView
                android:id="@+id/rteSuperscript"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/superscript" />

            <ImageView
                android:id="@+id/rteQuote"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/quote" />


            <ImageView
                android:id="@+id/rteFontColor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/foregroundcolor" />

            <ImageView
                android:id="@+id/rteBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/background" />

            <ImageView
                android:id="@+id/rteLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/ic_insert_link_black_48dp" />

            <ImageView
                android:id="@+id/rteListNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/listnumber" />

            <ImageView
                android:id="@+id/rteListBullet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/listbullet" />

            <ImageView
                android:id="@+id/rteIndentRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/indentright" />

            <ImageView
                android:id="@+id/rteIndentLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/indentleft" />

            <ImageView
                android:id="@+id/rteAlignLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/alignleft" />

            <ImageView
                android:id="@+id/rteAlignCenter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/aligncenter" />

            <ImageView
                android:id="@+id/rteAlignRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                colorPickerView:srcCompat="@drawable/alignright" />

            <ImageView
                android:id="@+id/rteInsertImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/image" />

            <ImageView
                android:id="@+id/rteInsertVideo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/video" />

            <ImageView
                android:id="@+id/rteAt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:visibility="gone"
                colorPickerView:srcCompat="@drawable/at" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/rteEmojiPanel"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="gone">

    </LinearLayout>
</merge>